<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_alpha_arrow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="alpha动画"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/iv_alpha_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/img_arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_scale_arrow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="scale动画"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/iv_scale_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/img_arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_translate_arrow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="scale动画"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/iv_translate_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/img_arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rotate_arrow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="scale动画"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/iv_rotate_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/img_arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_set_arrow"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="scale动画"
            android:gravity="center"
            android:layout_margin="20dp"/>
        <ImageView
            android:id="@+id/iv_set_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/img_arrow_down"/>
    </LinearLayout>
</LinearLayout>